<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="key3"
        android:summary="CheckBox Summary"
        android:title="CheckBox Preference" />

    <EditTextPreference
        android:defaultValue="brtvsk"
        android:dialogMessage="Change username"
        android:key="username_preference"
        android:summary="change"
        android:title="Username" />
    <ListPreference
        android:defaultValue="dd-MMM-yyyy HH:mm:ss"
        android:entries="@array/date_examples"
        android:entryValues="@array/date_formats"
        android:key="dateformat_preference"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/dateformat_preference" />
    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="Switch Summary"
        android:title="Switch Preference" />

</PreferenceScreen>